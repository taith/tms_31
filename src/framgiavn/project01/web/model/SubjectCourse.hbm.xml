<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project01.web.model.SubjectCourse" table="subjects_courses" 
		dynamic-insert="true" dynamic-update="true">
        <composite-id class="framgiavn.project01.web.model.SubjectCourse" mapped="true">
			<key-property name="subject_id" type="java.lang.Integer" column="subject_id" />
			<key-property name="course_id" type="java.lang.Integer" column="course_id" />
		</composite-id>		
		<many-to-one name="subjects" class="framgiavn.project01.web.model.Subject" lazy="false" fetch="select">
			<column name="subject_id" not-null="false" />
		</many-to-one>
		<many-to-one name="courses" class="framgiavn.project01.web.model.Course" lazy="false" fetch="select">
			<column name="course_id" not-null="false" />
		</many-to-one>
	</class>
	<query name="SC.DeleteSCById">
    	delete from SubjectCourse subjectCourse 
    	where (subjectCourse.subject_id=:subject_id and subjectCourse.course_id=:course_id)
    </query>
</hibernate-mapping>