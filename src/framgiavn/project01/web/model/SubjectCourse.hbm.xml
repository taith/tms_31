<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project01.web.model.SubjectCourse" table="subjects_courses" 
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="11" />
            <generator class="identity" />
		</id>
		<property name="subject_id" type="java.lang.Integer">
            <column name="subject_id" length="11"/>
        </property>
        <property name="course_id" type="java.lang.Integer">
            <column name="course_id" length="11"/>
        </property>
		
	</class>
	<query name="SubjectCourse.RemoveSubjectFromCourse">
    	delete from SubjectCourse subjectCourse 
    	where (subjectCourse.subject_id=:subject_id and subjectCourse.course_id=:course_id)
    </query>
</hibernate-mapping>