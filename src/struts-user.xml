<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/users" extends="default-web">
		<action name="findUserById*" class="springUserAction" method="findUserById">
			<param name="user.id">{1}</param>
			<result name="success">User.Info</result>
			<result name="input">User.Info</result>
			<result name="error">User.Info</result>
		</action>

		<action name="findUserByName*" class="springUserAction" method="findUserByName">
			<param name="user.name">{1}</param>
			<result name="success">User.Info</result>
			<result name="error">User.Info</result>
		</action>
		<action name="detail*" class="springUserAction" method="showUser">
			<param name="user.id">{1}</param>
			<result name="success">User.Info</result>
		</action>		
		<action name="new">			
			<result>User.add</result>
		</action>
		<action name="create" class="springUserAction" method="create">			
			<result name="success">User.all</result>			
		</action>
		<action name="edit*" class="springUserAction" method="editUserPage">
			<param name="user.id">{1}</param>			
			<result name="success">User.update</result>
			<result name="error">User.login</result>
		</action>
		<action name="update" class="springUserAction" method="updateUser">
			<result name="success">User.Info</result>
			<result name="error">User.update</result>
			<result name="login">User.login</result>
		</action>
		<action name="delete*" class="springUserAction" method="destroyUser">
			<param name="user.id">{1}</param>
			<result name="success">User.all</result>			
		</action>
		<action name="" class="springUserAction" method="viewAll">			
			<result name="success">User.all</result>
		</action>
	</package>
	<package name="Session" extends="default-web">
		<action name="login">
			<result>User.login</result>
		</action>
		<action name="dologin" class="springUserAction" method="dologin">
			<result name="success" type="redirect">/courses/</result>
			<result name="error">User.login</result>
		</action>
		<action name="logout" class="springUserAction" method="logout">
			<result name="success">User.login</result>
		</action>
	</package>
</struts>